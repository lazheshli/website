<header class="w-full md:hidden p-4 bg-zinc-100 flex flex-row">
  <h1 class="grow text-2xl leading-8 font-semibold">Лъжеш ли?</h1>
  <button type="button" phx-click={JS.toggle(to: "#nav-aside", time: 0)}>
    <.icon name="hero-bars-3" class="h-8 w-8" />
  </button>
</header>

<div class="w-full flex flex-row">
  <aside
    id="nav-aside"
    class="w-80 h-screen md:h-auto fixed md:static hidden md:block bg-white shadow-xl md:shadow-none z-10"
  >
    <a
      href={~p"/"}
      title="Лъжеш ли?"
      class="hidden md:block w-80 h-80 bg-cover bg-center"
      style="background-image: url(/images/logo.jpg)"
    >
    </a>

    <nav class="flex flex-col gap-1 p-2">
      <a
        href={~p"/"}
        title="Начало"
        class="block rounded p-2 hover:bg-zinc-200 flex flex-row"
      >
        <.icon name="hero-home" class="inline-block self-center mr-2 text-zinc-500" />
        <span class="inline-block leading-8 align-middle text-zinc-900 font-medium font-semibold">
          Начало
        </span>
      </a>

      <a
        href={~p"/за-проекта"}
        title="За проекта"
        class="block rounded p-2 hover:bg-zinc-200 flex flex-row"
      >
        <.icon name="hero-light-bulb" class="inline-block self-center mr-2 text-zinc-500" />
        <span class="inline-block leading-8 align-middle text-zinc-900 font-medium font-semibold">
          За проекта
        </span>
      </a>

      <a
        href={~p"/elections/1"}
        title="Парламентарни избори 2023"
        class="block rounded p-2 hover:bg-zinc-200 flex flex-row"
      >
        <.icon name="hero-shield-check" class="inline-block self-center mr-2 text-zinc-500" />
        <span class="inline-block leading-8 align-middle text-zinc-900 font-medium font-semibold">
          Парламентарни избори 2023
        </span>
      </a>

      <a
        href={~p"/"}
        title="Методика"
        class="block rounded p-2 hover:bg-zinc-200 flex flex-row"
      >
        <.icon name="hero-wrench-screwdriver" class="inline-block self-center mr-2 text-zinc-500" />
        <span class="inline-block leading-8 align-middle text-zinc-900 font-medium font-semibold">
          Методика
        </span>
      </a>

      <a
        href={~p"/"}
        title="Често задавани въпроси"
        class="block rounded p-2 hover:bg-zinc-200 flex flex-row"
      >
        <.icon
          name="hero-question-mark-circle"
          class="inline-block self-center mr-2 text-zinc-500"
        />
        <span class="inline-block leading-8 align-middle text-zinc-900 font-medium font-semibold">
          Често задавани въпроси
        </span>
      </a>
    </nav>
  </aside>

  <main class="grow p-4">
    <div class="xl:max-w-6xl xl:mx-auto">
      <%= @inner_content %>
    </div>
  </main>
</div>

